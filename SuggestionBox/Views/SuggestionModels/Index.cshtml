@model IEnumerable<SuggestionBox.Models.SuggestionModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="container">Suggestion Box</h2>

<p class="container thumbnail" style="text-align:center">
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suggestion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Topic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Suggestion)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.RecordNumber }) |
                    @Html.ActionLink("Details", "Details", new { id = item.RecordNumber }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.RecordNumber })
                </td>
            </tr>

        }

    </table>
</div>

